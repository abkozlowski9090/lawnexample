
<section {{ (id) ? 'id="' ~ id ~ '"' : '' }}  data-scroll  class="gallery {{ (section_background) ? ' '~section_background~' ' : '' }}">
  <div class="container container--fullwidth">
    <div class="gallery__carousel" data-module="gallery">
      {% for slide in slider.images %}
      <div class="carousel-cell">
        {%
        include 'atoms/picture.twig' with {
          'class_list': '',
          'alt': slide.image.large.caption,
          'images': {
            'standard_img': TimberImage(slide.image.large.url|resize(1600, 830)),
            'standard_img_retina': TimberImage(slide.image.large.url|resize(2400, 1245)),
            'tablet_img': (slide.image.medium) ? TimberImage(slide.image.medium.url|resize(900, 900)) : TimberImage(slide.image.large.url|resize(900, 900)),
            'mobile_img': (slide.image.small) ? TimberImage(slide.image.small.url|resize(600, 600)) : TimberImage(slide.image.large.url|resize(600, 600))
          }
        }
        %}
      </div>
      {% endfor %}
    </div>

    <div class="gallery__counter">
      <p class="gallery_counter-title"> Gallery </p>
      <p class="carousel-status"></p>
    </div>

  </div>
</section>
